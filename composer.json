{
    "name": "devnix/chipmunkphp",
    "type": "library",
    "description": "A PHP FFI binding for Chipmunk physics engine",
    "keywords": [
        "devnix",
        "chipmunkphp",
        "chipmunk",
        "physics",
        "game",
        "engine",
        "2d",
        "php",
        "ffi"
    ],
    "homepage": "https://github.com/devnix/chipmunkphp",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo Largo Mohedano",
            "email": "devnix.code@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Chipmunk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chipmunk\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests examples"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "7.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
